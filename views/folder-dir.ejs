<html>
  <head>
    <title>path</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #f9f9f9;
        color: #333;
        border: 1px solid #ddd;
        border-radius: 8px;
      }

      h1 {
        margin-bottom: 5px;
      }

      h4 {
        margin-top: 30px;
      }

      button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
      }

      button:hover {
        background-color: #0056b3;
      }

      #fileForm {
        margin-top: 10px;
        padding: 10px;
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 6px;
      }

      input[type="file"] {
        margin-top: 8px;
        margin-bottom: 10px;
        display: block;
      }

      li {
        margin-bottom: 8px;
      }

      a {
        color: #007bff;
        text-decoration: none;
        margin-left: 10px;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <% if (locals.folder) { %>
      <h1><%= folder.name %></h1>
      <h4>Files</h4>
      <script>
        function handleClick() {
          const form = document.getElementById('fileForm');
          form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }
      </script>
      <button onclick="handleClick()">Add Files</button>

      <div id="fileForm" style="display: none;">
        <form
          action="/add-file/<%= folder.id %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <label for="file">Upload File</label>
          <input type="file" name="file" id="file" required />
          <button type="submit">Upload</button>
        </form>
      </div>

      <% if (locals.folder.files && folder.files.length > 0) { %>
        <ul>
          <% folder.files.forEach((file) => { %>
            <li>
              <%= file.filename %>
              <a href="/download/<%= file.id %>">Download</a> |
              <a href="/delete-file/<%= file.id %>/<%= file.folderId %>" onclick="return confirm('Are you sure you want to delete this file?')">Delete</a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No files in this folder.</p>
      <% } %>
    <% } %>

    <a href="/" style="display: inline-block; margin-top: 20px;">‚Üê Back to Homepage</a>
  </body>
</html>
