<form action="/create-folder" method="POST" style="margin-top: 10px;">
    <label for="foldername" style="display: block; margin-bottom: 5px; font-weight: bold;">
        Folder Name
    </label>
    <input 
        type="text" 
        name="foldername" 
        id="foldername" 
        style="width: 100%; max-width: 300px; padding: 8px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;" 
        required 
    />
    <br />
    <button 
        type="submit" 
        style="background-color: #007BFF; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;"
    >
        Create
    </button>
</form>
